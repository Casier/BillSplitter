<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/friend_list_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_account">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_list_user_photo"
        android:layout_margin="2dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/friend_list_user_name"
        android:layout_toEndOf="@id/friend_list_user_photo"
        android:layout_marginStart="12dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>