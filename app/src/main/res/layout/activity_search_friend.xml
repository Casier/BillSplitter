<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_back">

    <TextView
        android:id="@+id/search_friend_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="22sp"
        android:paddingBottom="6dp"
        android:gravity="center_horizontal|bottom"
        android:background="@color/grey_border"
        android:text="Ajouter un ami"/>


    <EditText
        android:id="@+id/search_friend_input"
        android:layout_below="@+id/search_friend_title"
        android:textSize="16sp"
        android:hint="John Doe"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_friend_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_friend_input"
        android:layout_above="@+id/search_friend_invite_button"
        android:layout_alignParentStart="true"
        android:padding="12dp" />

    <Button
        android:id="@+id/search_friend_invite_button"
        android:layout_alignParentBottom="true"
        android:background="@color/green_bill"
        android:text="Inviter un ami"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>