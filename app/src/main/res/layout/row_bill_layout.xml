<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/globalContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/centerShim"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="-25dp"
        android:layout_toLeftOf="@+id/billUserImage"
        android:background="@color/red_bill">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/billName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="13dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/billAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/billName"
        android:layout_marginEnd="35dp"
        android:paddingTop="13dp"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/billUserImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="-25dp"
        android:layout_toStartOf="@+id/centerShim" />

</RelativeLayout>
